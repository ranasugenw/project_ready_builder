<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_dark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface_dark"
            app:titleTextColor="@color/text_primary"
            app:navigationIconTint="@color/primary_neon" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Target App -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/target_app"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_target_app"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/target_apps" />

            </LinearLayout>

            <!-- Chart Theme -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chart_theme"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_dark_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark Theme"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Capture Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/capture_settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <!-- FPS Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/label_fps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FPS: 2"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seek_bar_fps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="9"
                    android:progress="1" />

            </LinearLayout>

            <!-- Pattern Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pattern_settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <!-- Confidence Setting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/label_confidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min Confidence: 60%"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seek_bar_confidence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="60" />

            </LinearLayout>

            <!-- Indicator Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indicator_settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <!-- RSI Period -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/label_rsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSI Period: 14"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seek_bar_rsi_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="45"
                    android:progress="9" />

            </LinearLayout>

            <!-- Reset Button -->
            <Button
                android:id="@+id/btn_reset_settings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Reset to Defaults"
                android:background="@drawable/button_outline"
                android:textColor="@color/text_primary"
                android:layout_marginTop="24dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>